{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits",
    "group:allNonMajor"
  ],
  "nix": {
    "enabled": true
  },
  "cargo": {
    "enabled": true
  },
  "schedule": ["before 3am on Monday"],
  "automerge": false,
  "labels": ["dependencies"],
  "reviewers": ["@chahinebenlahcen"],
  "packageRules": [
    {
      "matchDatasources": ["crate"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "matchDatasources": ["github-tags"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    }
  ]
}
